<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>

    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <span>
    <%= link_to book.title, "/books/#{book.id}" %>
  </span>

      </tr>
    <% end %>
  </tbody>
</table>



<h2>New book</h2>
<%= form_with model: @book do |f| %>

<div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field:title %>
</div>
<div class="field">
    <label for="book_body">Body</label>
    <%= f.text_area:body %>
</div>

<% end %>
  <div class="actions">
    <input type="submit" name="commit" value="Create Book" data-disable-with="Create Book">
  </div>
</form>